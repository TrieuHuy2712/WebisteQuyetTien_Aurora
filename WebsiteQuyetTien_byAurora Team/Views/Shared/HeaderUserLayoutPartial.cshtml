<!-- *** HEADER ***  -->
<header class="header mb-5 sticky-top">
    <!-- *** NAVBAR *** --->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a href="@Url.Action("Index","Home")" class="navbar-brand home">
                <img src="@Url.Content("~/www.root/shared/user_layout/img/logo.png")" alt="Logo Quyết Tiến" class="d-none d-md-inline-block" style="height: 70px">
                <img src="@Url.Content("~/www.root/shared/user_layout/img/logo.png")" alt="Logo Quyết Tiến" class="d-inline-block d-md-none" style="height: 70px">
                <span class="sr-only">Quyết Tiến - Trang chủ</span>
            </a>
            <div class="navbar-buttons">
                <button type="button" data-toggle="collapse" data-target="#navigation"
                        class="btn btn-outline-secondary navbar-toggler">
                    <span class="sr-only">Chuyển đổi điều hướng</span><i class="fa fa-align-justify"></i>
                </button>
                <button type="button" data-toggle="collapse" data-target="#search"
                        class="btn btn-outline-secondary navbar-toggler">
                    <span class="sr-only">Chuyển đổi tìm kiếm</span><i class="fa fa-search"></i>
                </button>
            </div>
            <div id="navigation" class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item"><a href="@Url.Action("Index","Home")" class="nav-link active text-white">Trang chủ</a></li>
                    <li class="nav-item dropdown menu-large">
                        <a href="#" data-toggle="dropdown" data-hover="dropdown"
                           data-delay="200" class="dropdown-toggle nav-link">
                            Sản
                            phẩm<b class="caret"></b>
                        </a>
                        @Html.Action("MenuPartial","Home")
                        
                    </li>
                    <li class="nav-item"><a href="@Url.Action("News","Home")" class="nav-link">Tin tức</a></li>
                    <li class="nav-item"><a href="@Url.Action("About","Home")" class="nav-link">Về chúng tôi</a></li>
                    <li class="nav-item"><a href="@Url.Action("Contactus","Home")" class="nav-link">Liên hệ</a></li>
                    <li class="nav-item"><a href="@Url.Action("InstallmentHelper","Home")" class="nav-link">Mua trả góp</a></li>
                </ul>
                <div class="navbar-buttons d-flex justify-content-end">
                    @using (Html.BeginForm("Search","Home",FormMethod.Post,new { @class = "form-inline"}))
                    {
                        <input type="text" placeholder="Tìm kiếm" class="form-control" id="SearchInput" style="width:180px" name="searchKey">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                    }

                </div>
            </div>
        </div>
    </nav>
    <!-- *** HẾT NAVBAR *** -->
    <!-- --------------------------------------------- -->
    <!-- *** CÔNG CỤ TÌM KIẾM *** -->
    @*@Html.Action("Search","Home")*@
    <!-- *** HẾT CÔNG CỤ TÌM KIẾM *** -->
</header>
