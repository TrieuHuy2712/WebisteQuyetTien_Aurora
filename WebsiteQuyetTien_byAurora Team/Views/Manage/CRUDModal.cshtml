<div class="modal-header">
    <h4 class="modal-title">Thêm mới sản phẩm</h4>
    <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-body">
    <div id="horizontal-form">
        <form class="form-horizontal" role="form" id="frmProduct" method="post" enctype="multipart/form-data" >
            <div class="form-group row">
                <label for="txtProductCode" class="col-sm-3 col-form-label">Mã sản phẩm<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtProductCode" name="txtProductCode" readonly>
                    
                </div>
                <label for="txtProductName" class="col-sm-3 col-form-label">Tên sản phẩm<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtProductName" name="txtProductName" maxlength="100">
                    <span id="validateProductName" style="color:red"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="material-dropdown" class="col-sm-3 col-form-label">Loại sản phẩm<span class="star">*</span></label>
                <div class="col-sm-3">
                    <select id="material-dropdown"></select>
                </div>
                <label for="statusProduct" class="col-sm-3 col-form-label">Trạng thái<span class="star">*</span></label>
                <div class="col-sm-3">
                    <select id="statusProduct" class="form-control">
                        <option value="0" > Khóa </option>
                        <option value="1" selected> Kích hoạt </option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtOriginPrice" class="col-sm-3 col-form-label">Giá gốc<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtOriginPrice" name="txtOriginPrice">
                    <span id="validateOriginPrice" style="color:red"></span>
                </div>
                <label for="txtSalePrice" class="col-sm-3 col-form-label">Giá bán<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtSalePrice" name="txtSalePrice">
                    <span id="validateSalePrice" style="color:red"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtInstallmentPrice" class="col-sm-3 col-form-label">Giá trả góp<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtInstallmentPrice" name="txtInstallmentPrice">
                    <span id="validateInstallmentPrice" style="color:red"></span>
                </div>
                <label for="txtQuantity" class="col-sm-3 col-form-label">Số lượng<span class="star">*</span></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="txtQuantity" name="txtQuantity">
                    <span id="validateQuantity" style="color:red"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="uploadfile" class="col-sm-3 col-form-label">Hình ảnh</label>
                <div class="col-sm-3">
                    <input type="file" name="UploadFile" id="txtUploadFile" class="makethispretty" onchange="readURL(this)" , accept="image/gif, image/jpeg, image/png" />
                    <span id="validateUploadFile" style="color:red"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <img src="#" id="HinhAnhSP" width="200px" height="200px" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="btnAttributeCreateNew" class="btn btn-success">Ghi</button>
                    <button type="button" id="btnAttributeCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                </div>
            </div>
        </form>
    </div>
</div>