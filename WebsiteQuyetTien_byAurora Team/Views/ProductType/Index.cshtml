
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayput.cshtml";
}
<div class="monthly-grid">
    <div class="form-group row">
        <div class="progressbar-heading grids-heading col-sm-6">
            <h2><strong>XEM DANH SÁCH LOẠI SẢN PHẨM</strong></h2>
        </div>

        <div class="col-sm-6">
            <a href="#" @*data-target="#modal-add-edit" data-toggle="modal"*@ class="btn btn-success pull-right" id="btnCreateType"><i class="fas fa-plus"></i></a>
        </div>
    </div>
    <div id="modal-product-type" class=" modal fade modal-darkorange in" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                @Html.Partial("~/Views/ProductType/CRUDModal.cshtml")
            </div>
        </div>
    </div>

    <div class="modal fade text-center" id="modal-add-edit">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="myTypeTable" style="width:100%">
            <thead>
                <tr>
                    <th style="text-align:center; vertical-align:middle">Mã Loại Sản Phẩm</th>
                    <th style="text-align:center; vertical-align:middle">Tên Loại Sản Phẩm</th>
                    <th style="text-align:center; vertical-align:middle">#</th>
                </tr>
            </thead>
            <tbody id="tbl-type-content"></tbody>
        </table>
    </div>

    <script id="table-type-template" type="x-tmpl-mustache">
        <tr data-id="{{ID}}">
            <td style="text-align:center; vertical-align:middle">{{TypeCode}}</td>
            <td style="text-align:center; vertical-align:middle">{{TypeName}}</td>

            <td scope="row" style="text-align:center; vertical-align:middle">
                <button class="btn btn-default btn-sm btn-edit" data-id="{{ID}}"><i class="far fa-edit"></i></button>
            </td>
        </tr>
    </script>
</div>
@section Scripts{
    <script src="~/www.root/controller/productTypeController/productType.js"  charset="utf-8"></script>
};

