<div class="modal-header">
    <h4 class="modal-title"><span id="titleType">Thêm mới hãng sản xuất</span></h4>
    <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
</div>
<div class="modal-body">
    <div id="horizontal-form">
        <form class="form-horizontal" role="form" id="frmProduct">
            <div class="form-group row">
                <label for="txtProductCode" class="col-sm-3 col-form-label">Mã nhà sản xuất<span class="star">*</span></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="txtManuCode" name="txtManuCode" maxlength="3" />
                    <span id="validateManuCode" style="color:red"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtProductName" class="col-sm-3 col-form-label">Tên nhà sản xuất<span class="star">*</span></label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="txtManuName" name="txtManuName" maxlength="100">
                    <span id="validateManuName" style="color:red"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="btnManuCreateNew" class="btn btn-success">Ghi</button>
                    <button type="button" id="btnAttributeCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                </div>
            </div>
        </form>
    </div>
</div>